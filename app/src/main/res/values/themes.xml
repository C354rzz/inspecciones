<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Coppel.Blanco" parent="Theme.Coppel.White">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="Theme.Apkqa001inspecciones" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RowChecked">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:button">@drawable/round_button_disabled</item>
        <item name="android:paddingTop">14dp</item>

        <item name="android:background">@drawable/chek_row</item>
    </style>

    <style name="ActiveButton">
        <item name="android:theme">@style/Theme.Coppel.Blue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:background">@drawable/button_enabled</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="SmallButton">
        <item name="android:theme">@style/Theme.Coppel.Blue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/button_enabled_small</item>
    </style>

    <style name="LineButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/colorAzulDark</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- Deshabilitado -->
    <style name="LabelDeshabilitado">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGrisDisabled</item>
    </style>

    <!-- Encabezados -->
    <style name="LabelDefault">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Titulo -->
    <style name="title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#212222</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
    </style>

    <!-- Texto resaltado -->
    <style name="mini_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#212222</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
    </style>

    <!-- Proveedor header -->
    <style name="header_proveedor">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#68686A</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
    </style>

    <!--    Nombre Producto-->
    <style name="name_producto">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#68686A</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
    </style>

    <style name="ThemeOverlay.Apkqa001inspecciones.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

</resources>